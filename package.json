{
  "name": "sciolyff",
  "version": "0.1.2",
  "description": "A file format for Science Olympiad tournament results.",
  "license": "MIT",
  "author": "Duosmium Results (https://www.duosmium.org/results/)",
  "type": "module",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": "./dist/src/index.js"
  },
  "types": "./dist/src/index.d.ts",
  "bin": {
    "sciolyff-js": "./dist/bin/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Duosmium/sciolyff-js.git"
  },
  "homepage": "https://github.com/Duosmium/sciolyff-js#readme",
  "bugs": {
    "url": "https://github.com/Duosmium/sciolyff-js/issues"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "format": "prettier --check .",
    "fix": "prettier --write . && eslint --fix .",
    "build": "npm run clean && tsc",
    "prepare": "husky install",
    "release": "npm run build; release-it"
  },
  "keywords": [
    "sciolyff",
    "scioly",
    "science olympiad",
    "duosmium"
  ],
  "dependencies": {
    "commander": "^9.0.0",
    "fetch-retry": "^5.0.1",
    "js-yaml": "^4.1.0",
    "neat-csv": "^7.0.0",
    "node-fetch": "^3.2.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node-fetch": "^2.6.1",
    "@types/yup": "^0.29.13",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "2.5.1",
    "release-it": "^14.12.4",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{js,ts,json,yaml,yml,md}": "prettier --write",
    "*.{js,ts}": "eslint --cache --fix"
  }
}
