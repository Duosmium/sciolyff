{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2021"],
    "strictNullChecks": true,
    "strictFunctionTypes": false
  },
  "tsimp": {
    "compilerOptions": {
      "strict": false
    }
  },
  "include": ["src", "bin"]
  // "exclude": ["node_modules", "dist", "compare", "tests"]
}
