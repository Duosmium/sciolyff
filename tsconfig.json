{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2021"],
    "strictNullChecks": true,
    "strictFunctionTypes": false
  },
  "include": ["src", "bin"],
  "exclude": ["node_modules", "dist"]
}
